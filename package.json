{
  "name": "@bgd-labs/aave-governance-ui-helpers",
  "author": "BGD labs",
  "contributors": [
    {
      "name": "Oleksandr Tkach",
      "url": "https://github.com/Argeare5"
    }
  ],
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "build:populate-cache": "npx esbuild src/lowdb/populateCache.ts --tsconfig=./tsconfig.json --bundle --outfile=scripts/populate-cache.js --platform=node --target=es6",
    "cache:update": "CACHE_PATH=../src/generated-cache node scripts/populate-cache.js",
    "cache:parse": "node scripts/parseProposalDetails.js"
  },
  "peerDependencies": {
    "@bgd-labs/aave-address-book": ">=2.6.0",
    "ethers": "5.x",
    "@web3-react/core": "~8.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "module": "dist/bgd-aave-governance-ui-helpers.esm.js",
  "size-limit": [
    {
      "path": "dist/bgd-aave-governance-ui-helpers.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/bgd-aave-governance-ui-helpers.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "latest",
    "@types/lodash": "latest",
    "bignumber.js": "latest",
    "dotenv": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-config-react-app": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-simple-import-sort": "latest",
    "ethers": "^5.7.2",
    "husky": "latest",
    "lodash": "latest",
    "lowdb": "^6.0.1",
    "prettier": "latest",
    "size-limit": "latest",
    "tsdx": "latest",
    "tslib": "latest",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@bgd-labs/aave-address-book": "latest",
    "@web3-react/core": "^8.2.2",
    "dayjs": "latest",
    "gray-matter": "^4.0.3"
  }
}
