{
  "name": "@bgd-labs/aave-governance-ui-helpers",
  "description": "This repository saves and updates the cache for finished proposals, also includes helper functions connected to Aave governance UI version 3.",
  "version": "0.2.7",
  "author": "BGD labs",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "contributors": [
    {
      "name": "Oleksandr Tkach",
      "url": "https://github.com/Argeare5"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgd-labs/aave-governance-ui-helpers.git"
  },
  "bugs": {
    "url": "https://github.com/bgd-labs/aave-governance-ui-helpers/issues"
  },
  "homepage": "https://github.com/bgd-labs/aave-governance-ui-helpers#readme",
  "scripts": {
    "start": "tsup src/index.ts --watch",
    "build": "tsup",
    "size": "size-limit",
    "lint": "npx eslint --fix",
    "build:populate-cache": "npx esbuild src/lowdb/populateCache.ts --tsconfig=./tsconfig.json --bundle --outfile=scripts/populate-cache.js --platform=node --target=ESNEXT",
    "cache:update": "CACHE_PATH=../src/generated-cache node scripts/populate-cache.js",
    "cache:parse": "node scripts/parseProposalDetails.js",
    "ci:publish": "npm run build && npm publish --access=public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "sideEffects": false,
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "50 KB"
    }
  ],
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@bgd-labs/aave-address-book": ">=2.7.0 < 3",
    "@wagmi/core": "^1.4.5",
    "viem": "^1.16.6"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^9.0.0",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.7",
    "bignumber.js": "^9.1.2",
    "dotenv": "^16.3.1",
    "esbuild-plugin-file-path-extensions": "^1.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lodash": "^4.17.21",
    "lowdb": "^6.1.0",
    "prettier": "^3.0.3",
    "size-limit": "^9.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@bgd-labs/aave-address-book": "2.8.0",
    "@wagmi/core": "^1.4.5",
    "bs58": "^5.0.0",
    "dayjs": "^1.11.10",
    "gray-matter": "^4.0.3",
    "viem": "^1.16.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
